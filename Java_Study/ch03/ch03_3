package ch03;

import java.util.Scanner;

public class _03_Trapezoid {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		double base, top, height;
		
		Scanner inp = new Scanner(System.in); 
		
		System.out.print("윗변 밑변 높이를 연속으로 입력 (공백으로 구분) : ");
		top = inp.nextDouble();
		base = inp.nextDouble();
		height = inp.nextDouble();
		inp.close();
		
		/*
		 * Scanner inp = new Scanner(System.in); 
		 * System.out.print("윗변 : "); 
		 * top = inp.nextDouble();
		 * 
		 * System.out.print("밑변 : "); 
		 * base = inp.nextDouble();
		 * 
		 * System.out.print("높이 : "); 
		 * height = inp.nextDouble();
		 * 
		 * inp.close();
		 */
		
		double area = (top + base) * height /2;
		
		System.out.println("사다리꼴 넓이는 " + area + "입니다.");
		
	}

}
